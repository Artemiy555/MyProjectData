<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="spring.lesson15.part1.entity.Human" id="Ivan">
        <constructor-arg name="name" value="Ivan"/>
        <constructor-arg name="age" value="25"/>
        <constructor-arg name="hp" value="100"/>
        <property name="weapon" ref="Axe"/>
    </bean>

    <bean class="spring.lesson15.part1.entity.Human" id="Tannos">
        <constructor-arg name="name" value="Tannos"/>
        <constructor-arg name="age" value="1000"/>
        <constructor-arg name="hp" value="200"/>
        <property name="weapon" ref="gauntlet"/>
    </bean>

    <bean class="spring.lesson15.part1.entity.Human" id="Vasya">
        <constructor-arg name="name" value="Vasya"/>
        <constructor-arg name="age" value="25"/>
        <constructor-arg name="hp" value="100"/>
        <property name="weapon" ref="Dagger"/>
    </bean>

    <bean class="spring.lesson15.part1.entity.Weapon" id="Axe">
        <property name="type" value="HeaveWarAxe"/>
        <property name="damage" value="5"/>
        <property name="weight" value="10"/>
    </bean>
    <bean class="spring.lesson15.part1.entity.Weapon" id="Dagger">
        <property name="type" value="Dagger"/>
        <property name="damage" value="45"/>
        <property name="weight" value="5"/>
    </bean>

    <bean class="spring.lesson15.part1.entity.Weapon" id="beamGun">
        <property name="type" value="BeamGun"/>
        <property name="damage" value="50"/>
        <property name="weight" value="1"/>
    </bean>

    <bean class="spring.lesson15.part1.entity.Weapon" id="gauntlet">
        <property name="type" value="InfinityGauntlet"/>
        <property name="damage" value="999999"/>
        <property name="weight" value="1"/>
    </bean>


</beans>