<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Bean - реализация объекта Human -->
    <bean class="spring.lesson15.entity.Human" id="Ivan">
        <constructor-arg name="name" value="Ivan"/>
        <constructor-arg name="age" value="25"/>
        <constructor-arg name="hp" value="100"/>
    </bean>

    <bean class="spring.lesson15.entity.Human" id="Vasya">
        <constructor-arg name="name" value="Vasilij"/>
        <constructor-arg name="age" value="25"/>
        <constructor-arg name="hp" value="100"/>
    </bean>

    <bean class="spring.lesson15.entity.Weapon" id="Axe">
        <property name="type" value="Axe"/>
        <property name="damage" value="5"/>
        <property name="weight" value="10"/>
    </bean>

    <bean class="spring.lesson15.entity.Weapon" id="LegendaryOfficeKnife">
        <property name="type" value="Knife"/>
        <property name="damage" value="50"/>
        <property name="weight" value="1"/>
    </bean>

</beans>