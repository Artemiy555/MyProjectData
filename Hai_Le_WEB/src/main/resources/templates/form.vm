<html>
    <head>
        <title>Form Page</title>
        <!-- Вызов функции -->
        <script>
            function submitExample() {
                var name = document.getElementById("name")
                alert("Hello,  "  + name.value)
            }
        </script>
    </head>
    <body>
        <h1>Form Page with JS</h1>

        <form>
            <p>Name</p>
            <input id="name" type="text">
            <input type="submit" value="Submit" onclick="submitExample()">
        </form>
    </body>
</html>